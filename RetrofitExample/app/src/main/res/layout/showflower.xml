<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/showflower_image_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"/>

        <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView

                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:layout_gravity="left"
                />

            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/showflower_textview_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                />

        </LinearLayout>

        <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
           >
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="ID: "
                android:layout_gravity="left"
                />

            <TextView
                android:id="@+id/showflower_textview_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id"
                android:gravity="center_horizontal"
                />

        </LinearLayout>

        <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="left"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="category: "
                />

            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/showflower_textview_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="category"
                />

        </LinearLayout>


        <LinearLayout
            android:padding="16dp"
             android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="left"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="price: "
                />

            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/showflower_textview_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price"
                />

        </LinearLayout>


        <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="left"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Instruction: "
                />

            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/showflower_textview_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="instruction"
                />

        </LinearLayout>


    </LinearLayout>

</ScrollView>